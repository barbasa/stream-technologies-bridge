<configuration>

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <charset>UTF-8</charset>
            <pattern>%highlight(%date{ISO8601} %-5level %-50.50([%logger{50}]))  %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="org.apache" level="WARN"/>
    <logger name="kafka" level="WARN"/>
    <logger name="akka" level="WARN"/>
    <logger name="org.apache.kafka.common.utils.AppInfoParser" level="ERROR"/>
    <logger name="org.apache.kafka.clients.NetworkClient" level="ERROR"/>
    <logger name="org.I0Itec.zkclient" level="WARN"/>
    <logger name="com.amazonaws.services.kinesis.producer.CertificateExtractor" level="ERROR"/>
    <logger name="com.amazonaws.services.kinesis.producer.LogInputStreamReader" level="ERROR"/>
    <logger name="com.amazonaws" level="ERROR"/>
    <logger name="software.amazon.awssdk" level="ERROR"/>
    <logger name="io.netty.handler" level="ERROR"/>


    <root level="info">
        <appender-ref ref="console"/>
    </root>

</configuration>